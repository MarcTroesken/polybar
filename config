[settings]
screenchange-reload = true
throttle-output = 5
throttle-output-for = 10
compositing-background = over
compositing-foreground = over
compositing-overline = over
compositing-underline = over
compositing-border = over
pseudo-transparency = true

[global/wm]
margin-top = 0
margin-bottom = 0

[colors]
background = #282a36
foreground = #f8f8f2
alert = #ff5555

darkpurple = #44475a
otherpurple = #6272a4
cyan = #8be9fd
green = #50fa7b
orange = #ffb86c
pink = #ff79c6
purple = #bd93f9
red = #ff5555
yellow = #f1fa8c

[bar/i3]
monitor = ${env:MONITOR:eDP}
width = 100%
height = 24
fixed-center = false
bottom = false

background = ${colors.background}
foreground = ${colors.foreground}

; Enable support for inter-process messaging
; See the Messaging wiki page for more details.
enable-ipc = true

line-size = 2
line-color = #f00

border-size = 0
border-top-size = 3
border-bottom-size = 3
border-color = ${colors.background}

padding-left = 1
padding-right = 1

module-margin-left = 2
module-margin-right = 0

font-0 = "Hack Nerd Font:size=12;2"
font-1 = "FontAwesome:size=22;5"
font-2 = "Hack Nerd Font:size=10;2"
font-3 = "Hack Nerd Font:size=22;5"

tray-position = right
tray-padding = 0
tray-detached = false
tray-maxsize = 15

modules-left = i3 xwindow
modules-center =
modules-right = pulseaudio memory cpu battery shortdate

;wm-restack = i3

;override-redirect = true
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[bar/i3-2]
inherit = bar/i3
modules-right = pulseaudio date

tray-position = none

[module/xwindow]
type = internal/xwindow
label = %title%
label-maxlen = 50

format-foreground = ${colors.cyan}
format-background = ${colors.background}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 0
label-mode-foreground = #000000
label-mode-background = #FFBB00

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.purple}
label-focused-foreground= ${colors.foreground}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 1
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.foreground}


; visible = Active workspace on unfocused monitor
label-visible = %index% 
label-visible-background = ${colors.background}
label-visible-foreground = ${colors.purple}
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %index% 
label-urgent-background = ${self.label-focused-background}
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 1

[module/date]
type = internal/date
interval = 5

date = " %d-%m-%Y"
date-alt =

time = %H:%M
time-alt = %H:%M:%S

format-prefix = ""
format-prefix-foreground = ${colors.darkpurple}
format-prefix-background = ${colors.cyan}
format-foreground = ${colors.foreground}
format-background = ${colors.darkpurple}
format-padding = 0 
format-prefix-padding = 1 
label =%{T3} %date% %time% %{T-}

[module/shortdate]
inherit = module/date

date =
date-alt = " %d-%m-%Y"

time = %H:%M
time-alt = %H:%M:%S

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume>
label-volume = %{T3} %percentage%% %{T-}
label-volume-foreground = ${root.foreground}
label-volume-background = ${root.darkpurple}
format-volume-foreground = ${colors.foreground}
format-volume-background = ${colors.darkpurple}
format-volume-prefix = "  "
format-volume-prefix-foreground = ${colors.darkpurple}
format-volume-prefix-background = ${colors.green}
format-padding = 0

label-font = 3
label-muted = "  "
label-muted-foreground = ${colors.foreground}
label-muted-background = ${colors.red}

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.green}
bar-volume-foreground-1 = ${colors.green}
bar-volume-foreground-2 = ${colors.green}
bar-volume-foreground-3 = ${colors.green}
bar-volume-foreground-4 = ${colors.green}
bar-volume-foreground-5 = ${colors.cyan}
bar-volume-foreground-6 = ${colors.red}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.purple}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <label-charging>
label-charging = %{T3} %percentage%% %{T-}
format-charging-foreground = ${colors.foreground}
format-charging-background = ${colors.darkpurple}
format-charging-prefix = "  "
format-charging-prefix-foreground = ${colors.darkpurple}
format-charging-prefix-background = ${colors.green}


format-discharging = <label-discharging>
label-discharging = %{T3} %percentage%% %{T-}
format-discharging-foreground = ${colors.foreground}
format-discharging-background = ${colors.darkpurple}
format-discharging-prefix = "  "
format-discharging-prefix-foreground = ${colors.darkpurple}
format-discharging-prefix-background = ${colors.orange}

format-full-prefix = "  "
format-full-prefix-foreground = ${colors.purple}
format-full-prefix-background = ${colors.darkpurple}

################################################################################

[module/cpu]
;https://github.com/jaagr/polybar/wiki/Module:-cpu
type = internal/cpu
; Seconds to sleep between updates
; Default: 1
interval = 1
format-foreground = ${colors.foreground}
format-background = ${colors.darkpurple}
format-prefix = "  "
format-prefix-foreground = ${colors.darkpurple}
format-prefix-background = ${colors.otherpurple}

label-font = 3

; Available tags:
;   <label> (default)
;   <bar-load>
;   <ramp-load>
;   <ramp-coreload>
format = <label>

format-padding = 0

; Available tokens:
;   %percentage% (default) - total cpu load
;   %percentage-cores% - load percentage for each core
;   %percentage-core[1-9]% - load percentage for specific core
label = %{T3} %percentage:1%% %{T-}

################################################################################

[module/memory]
;https://github.com/jaagr/polybar/wiki/Module:-memory
type = internal/memory
interval = 1
; Available tokens:
;   %percentage_used% (default)
;   %percentage_free%
;   %gb_used%
;   %gb_free%
;   %gb_total%
;   %mb_used%
;   %mb_free%
;   %mb_total%
label = %{T3} %gb_used% %{T-}

format = <label>
format-prefix = "  "
format-prefix-foreground = ${colors.darkpurple}
format-prefix-background = ${colors.pink}
format-foreground = ${colors.foreground}
format-background = ${colors.darkpurple}

format-padding = 0 
format-prefix-padding = 0

################################################################################
